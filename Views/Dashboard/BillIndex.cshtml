@model IEnumerable<UserSupervision.Models.User>


@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">
        <div class="row">
            <!-- DOM/Jquery table start -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <a href="#" class="text-secondary f-w-400 float-end" data-bs-toggle="modal" data-bs-target="#AddBillModal">Add Bill Generate</a>
                        <br />
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>

                                        <th>SL No.</th>
                                        <th>Full Name</th>
                                        <th>Bill Amount</th>                                       
                                        <th>Payment Status</th>
                                        <th>Company Name</th>
                                        <th>Month</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSL = 1;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@countSL</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (user.Status)
                                                {
                                                    <span class="badge bg-success text-white">Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-white">Unpaid</span>
                                                }
                                            </td>
                                            <td></td>
                                            <td>@((DateTime.Now.Date - user.CreatedAt.Date).Days)</td>
                                        </tr>
                                        countSL++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable({});
        });
    </script>
    }


<div class="modal fade" id="AddBillModal" tabindex="-1" aria-labelledby="AddBillModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <!-- made it larger for table -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddBillModalLabel">User List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Created Date</th>
                            <th>Amount</th> <!-- use actual property if exists -->
                            <th>Days Since Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>N/A</td> <!-- no Amount in model, unless you add -->
                                <td>@((DateTime.Now.Date - user.CreatedAt.Date).Days)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
