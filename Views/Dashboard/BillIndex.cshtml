@model List<UserSupervision.Models.UserWithCompanyViewModel>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <a href="#" class="text-secondary f-w-400 float-end" data-bs-toggle="modal" data-bs-target="#AddBillModal">Add New Bill Generate</a>
                        <br />
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>

                                        <th class="text-center">SL No.</th>
                                        <th class="text-center">Full Name</th>
                                        <th class="text-center">Bill Amount</th>
                                        <th class="text-center">Payment Status</th>
                                        <th class="text-center">Send Email</th>
                                        <th class="text-center">Company Name</th>
                                        <th class="text-center">Day</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSL = 1;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@countSL</td>
                                            <td class="text-center">@user.User.FullName</td>
                                            <td class="text-center">N/A</td>
                                            <td class="text-center">
                                                @switch (user.PaymentStatus?.ToLower()) 
                                                {
                                                    case "paid":
                                                        <span class="badge bg-success text-white">Paid</span>
                                                        break;
                                                    case "unpaid":
                                                        <span class="badge bg-danger text-white">Unpaid</span>
                                                        break;
                                                    case "due":
                                                        <span class="badge bg-warning text-dark">Due</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary text-white">@user.PaymentStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="mailto:@user.User.Email" class="btn btn-outline-primary btn-sm" title="Send Email">
                                                    <i class="ti ti-mail"></i>
                                                </a>
                                            </td>

                                            <td class="text-center">@user.CompanyName</td>
                                            <td class="text-center">@((DateTime.Now.Date - user.User.CreatedAt.Date).Days)</td>
                                        </tr>
                                        countSL++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable({});
        });
    </script>
    }


<div class="modal fade" id="AddBillModal" tabindex="-1" aria-labelledby="AddBillModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddBillModalLabel">User List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th class="text-center">Full Name</th>
                            <th class="text-center">Created Date</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">Bill Generated On</th>
                            <th class="text-center">From Date</th>
                            <th class="text-center">To Date</th>
                            <th class="text-center">Days Since Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {

                            <tr>
                                <td class="text-center">@user.User.FullName</td>
                                <td class="text-center">@user.User.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <input type="number" class="form-control amount-input"
                                           placeholder="Enter amount" />
                                </td>
                                <td class="text-center">@DateTime.Now.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <input type="date" class="form-control from-date" />
                                </td>
                                <td class="text-center">
                                    <input type="date" class="form-control to-date" />
                                </td>
                                <td class="text-center">@((DateTime.Now.Date - user.User.CreatedAt.Date).Days)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBills">Save Bills</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#saveBills').click(function() {
            // Implement your save logic here
            alert('Bill data saved successfully!');
        });
    });
</script>