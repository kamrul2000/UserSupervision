@model List<UserSupervision.Models.UserWithCompanyViewModel>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">                    
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>

                                        <th class="text-center">SL No.</th>
                                        <th class="text-center">Full Name</th>
                                        <th class="text-center">Bill Amount</th>
                                        <th class="text-center">Payment Status</th>
                                        <th class="text-center">Send Email</th>
                                        <th class="text-center">Company Name</th>
                                        <th class="text-center">Day</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSL = 1;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@countSL</td>
                                            <td class="text-center">@user.User.FullName</td>
                                            <td class="text-center">@user.Amount</td>
                                            <td class="text-center">
                                                @{
                                                    var status = user.PaymentStatus?.ToLower();
                                                }

                                                @if (status == "paid")
                                                {
                                                    <span class="badge bg-success text-white">Paid</span>
                                                }
                                                else if (status == "unpaid")
                                                {
                                                    <span class="badge bg-danger text-white">Unpaid</span>
                                                }
                                                else if (status == "due")
                                                {
                                                    <span class="badge bg-warning text-dark">Due</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white">@user.PaymentStatus</span>
                                                }
                                            </td>

                                            <td class="text-center">
                                                <a href="mailto:@user.User.Email" class="btn btn-outline-primary btn-sm" title="Send Email">
                                                    <i class="ti ti-mail"></i>
                                                </a>
                                            </td>

                                            <td class="text-center">@user.CompanyName</td>
                                            <td class="text-center">@((DateTime.Now.Date - user.User.CreatedAt.Date).Days)</td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-info open-bill-modal"
                                                        data-userid="@user.User.Id"
                                                        data-username="@user.User.FullName"
                                                        data-createdat="@user.User.CreatedAt.ToString("yyyy-MM-dd")"
                                                        data-subscriptionid="@user.User.SubscriptionId">
                                                    Generate Bill
                                                </button>
                                            </td>

                                        </tr>
                                        countSL++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="AddBillModal" tabindex="-1" aria-labelledby="AddBillModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddBillModalLabel">Generate Bill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SaveBill" asp-controller="Dashboard">
                    <input type="hidden" name="UserId" id="modalUserId" />
                    <input type="hidden" name="SubscriptionId" id="modalSubscriptionId" />

                    <div class="mb-3">
                        <label>Full Name</label>
                        <input type="text" id="modalFullName" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label>Subscription Date</label>
                        <input type="text" id="modalCreatedAt" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label>Bill Amount</label>
                        <input type="number" name="Amount" id="modalAmount" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>From Date</label>
                        <input type="date" name="FromDate" id="modalFromDate" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>To Date</label>
                        <input type="date" name="ToDate" id="modalToDate" class="form-control" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Bills</button>
                    </div>
                </form>
            </div>          
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable();

            let currentRow = null;

            $('.open-bill-modal').click(function () {
                const button = $(this);
                const userId = button.data('userid');
                const fullName = button.data('username');
                const createdAt = button.data('createdat');
                const subscriptionId = button.data('subscriptionid');

                $('#modalUserId').val(userId);
                $('#modalFullName').val(fullName);
                $('#modalCreatedAt').val(createdAt);
                $('#modalSubscriptionId').val(subscriptionId);

                currentRow = button.closest('tr');

                $('#AddBillModal').modal('show');
            });

                           $('#saveBills').click(function () {
            const amount = $('#modalAmount').val();
            const fromDate = $('#modalFromDate').val();
            const toDate = $('#modalToDate').val();
            const userId = $('#modalUserId').val();
            const subscriptionId = $('#modalSubscriptionId').val();

            if (!amount || !fromDate || !toDate) {
                alert('Please enter valid information.');
                return;
            }

            // Make an AJAX call to save the bill and update the payment status
            $.ajax({
                url: '@Url.Action("SaveBill", "Dashboard")', // Make sure the URL is correct
                method: 'POST',
                data: {
                    userId: userId,
                    amount: amount,
                    fromDate: fromDate,
                    toDate: toDate,
                    subscriptionId: subscriptionId
                },
                success: function (response) {
                    if (response.success) {
                        // Update the amount and status in the table
                        currentRow.find('.amount-cell').text(amount);
                        currentRow.find('.payment-status-cell').text("Due");

                        $('#AddBillModal').modal('hide');
                    } else {
                        alert("Failed to save the bill: " + response.message); // Show the error message from the controller
                    }
                },
                error: function () {
                    alert("Error while saving the bill.");
                }
            });
        });


        });
    </script>
}
