@model IEnumerable<UserSupervision.Models.User>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">      
        <div class="row">
            <!-- DOM/Jquery table start -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>

                                        <th>SL No.</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Status</th>
                                        <th>Created At</th>
                                        <th>Day</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSL = 1;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@countSL</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Mobile</td>
                                            <td>
                                                @if (user.Status)
                                                {
                                                    <span class="badge bg-success text-white">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-white">Inactive</span>
                                                }
                                            </td>
                                            <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>@((DateTime.Now.Date - user.CreatedAt.Date).Days)</td>
                                        </tr>
                                        countSL++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>           
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable({});
        });
    </script>
    }

