@model IEnumerable<UserSupervision.Models.User>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">      
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap text-center">
                                <thead>
                                    <tr>
                                        <th class="text-center">SL No.</th>
                                        <th class="text-center">Full Name</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Mobile</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Created At</th>
                                        <th class="text-center">Day</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSL = 1;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@countSL</td>
                                            <td class="text-center">@user.FullName</td>
                                            <td class="text-center">@user.Email</td>
                                            <td class="text-center">@user.Mobile</td>
                                            <td class="text-center">
                                                @if (user.Status)
                                                {
                                                    <span class="badge bg-success text-white">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger text-white">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td class="text-center">@((DateTime.Now.Date - user.CreatedAt.Date).Days)</td>
                                        </tr>
                                        countSL++;
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>           
        </div>
    </div>
</section>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable({});
        });
    </script>
    }

