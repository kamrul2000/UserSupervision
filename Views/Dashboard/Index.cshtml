@model IEnumerable<UserSupervision.Models.AppUser>

@{
    ViewBag.Title = "All Users";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">All Users</h2>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Role ID</th>
                <th>Branch ID</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Day</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Mobile</td>
                    <td>@user.Address</td>
                    <td>@user.RoleId</td>
                    <td>@user.BranchId</td>
                    <td>
                        @if (user.Status)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@((DateTime.Now.Date - user.CreatedAt.Date).Days)</td>


                </tr>
            }
        </tbody>
    </table>
</div>
