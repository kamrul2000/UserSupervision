@model IEnumerable<UserSupervision.Models.UserBillStatus>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Users";
}
<section class="pc-container">
    <div class="pc-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">                    
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Invoice</th>
                                        <th>Amount</th>
                                        <th>Pay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in Model)
                                    {
                                        <tr>
                                            <td>@bill.InvoiceNumber</td>
                                            <td>@bill.Amount</td>
                                            <td>
                                                <form asp-action="PayBill" method="post">
                                                    <input type="hidden" name="InvoiceNumber" value="@bill.InvoiceNumber" />
                                                    <input type="hidden" name="SubscriptionId" value="@bill.SubscriptionId" />
                                                    <input type="hidden" name="BillAmount" value="@bill.Amount" />
                                                    <input type="number" step="0.01" name="AmountPaid" placeholder="Amount Paid" required />
                                                    <input type="text" name="MoneyReceiptOrCheckNumber" placeholder="Receipt/Check No." required />
                                                    <button type="submit" class="btn btn-sm btn-primary">Pay</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dom-jqry').DataTable();                   
        });


        });
    </script>
}
