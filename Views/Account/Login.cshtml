@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post" asp-action="Login">
    <div>
        <label>Email</label>
        <input type="email" name="email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" required />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
    <div style="color:red">
        @ViewBag.Error
    </div>
</form>
